<%#
  Vista principal para la gestión de festivos.
  Muestra una tabla con los festivos existentes y permite añadir, editar o eliminar.
%>

<% content_for :title, "Gestión de Festivos" %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Gestión de Festivos Anuales</h1>
  <div>
    <%= link_to 'Añadir Nuevo Festivo', new_admin_festivo_path, class: 'btn btn-primary' %>
    <%= link_to 'Volver al Panel', admin_root_path, class: 'btn btn-secondary' %>
  </div>
</div>

<div class="card">
  <div class="table-responsive">
    <table class="table table-striped table-hover mb-0 align-middle">
      <thead>
        <tr>
          <th scope="col">Fecha</th>
          <th scope="col">Descripción</th>
          <th scope="col">Tipo</th>
          <th scope="col" class="text-end">Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% @festivos.each do |festivo| %>
          <tr>
            <td class="fw-bold"><%= l(festivo.fecha, format: :long) %></td>
            <td><%= festivo.descripcion %></td>
            <td>
              <% if festivo.apertura_autorizada? %>
                <span class="badge bg-success-subtle text-success-emphasis">Apertura Autorizada</span>
              <% else %>
                <span class="badge bg-danger-subtle text-danger-emphasis">Festivo de Cierre</span>
              <% end %>
            </td>
            <td class="text-end">
              <div class="d-flex justify-content-end gap-2">
                <%= link_to 'Editar', edit_admin_festivo_path(festivo), class: 'btn btn-sm btn-outline-secondary' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>