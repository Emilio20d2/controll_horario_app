<div class="modal fade" id="passwordVerificationModal" tabindex="-1" aria-labelledby="passwordVerificationModalLabel" aria-hidden="true" data-controller="password-verification">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="passwordVerificationModalLabel">Confirmar Acción</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>Para continuar con esta acción, por favor, introduce tu contraseña.</p>

        <%# Campo oculto para almacenar la URL de la acción a ejecutar tras la verificación %>
        <input type="hidden" data-password-verification-target="actionUrl">
        <%# Campo oculto para almacenar el método HTTP (DELETE, POST, etc.) %>
        <input type="hidden" data-password-verification-target="actionMethod">

        <div class="mb-3">
          <label for="verification_password" class="form-label">Contraseña</label>
          <input type="password" class="form-control" id="verification_password" data-password-verification-target="passwordInput" required autofocus>
        </div>
        <div class="alert alert-danger d-none" data-password-verification-target="error" role="alert">
          <!-- Los mensajes de error se mostrarán aquí -->
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
        <button type="button" class="btn btn-danger" data-action="click->password-verification#verify">Confirmar</button>
      </div>
    </div>
  </div>
</div>