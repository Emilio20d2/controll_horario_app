<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Tipos de Contrato</h1>
    <%= link_to 'Nuevo Tipo de Contrato', new_admin_tipo_contrato_path, class: 'btn-primary' %>
  </div>

  <table class="table table-striped table-hover">
    <thead class="table-light">
      <tr>
        <th>Nombre</th>
        <th class="text-center">Afecta Bolsa Ordinaria</th>
        <th class="text-center">Acumula Festivo Trabajado</th>
        <th class="text-center">Acumula Festivo en Libranza</th>
        <th class="text-end">Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% @tipos_contrato.each do |tipo| %>
        <tr>
          <td><%= tipo.nombre %></td>
          <td class="text-center">
            <span class="badge bg-<%= tipo.afecta_bolsa_ordinaria? ? 'success' : 'secondary' %>"><%= tipo.afecta_bolsa_ordinaria? ? 'Sí' : 'No' %></span>
          </td>
          <td class="text-center">
            <span class="badge bg-<%= tipo.acumula_festivo_trabajado_en_bolsa ? 'success' : 'secondary' %>"><%= tipo.acumula_festivo_trabajado_en_bolsa ? 'Sí' : 'No' %></span>
          </td>
          <td class="text-center">
            <span class="badge bg-<%= tipo.acumula_festivo_en_libranza ? 'success' : 'secondary' %>"><%= tipo.acumula_festivo_en_libranza ? 'Sí' : 'No' %></span>
          </td>
          <td class="text-end"><%= link_to 'Editar', edit_admin_tipo_contrato_path(tipo), class: 'btn-primary' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="mt-4 text-end">
    <%= link_to 'Volver al Menú Principal', root_path, class: 'btn-primary' %>
  </div>
</div>