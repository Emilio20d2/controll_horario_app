<% content_for :title, "Gestión de Tipos de Contrato" %>

<div class="page-header">
  <h1>Tipos de Contrato</h1>
  <%= link_to 'Nuevo Tipo de Contrato', new_admin_tipo_contrato_path, class: 'btn btn-primary' %>
</div>

<div class="table-responsive content-box">
  <table class="table table-striped table-hover align-middle">
    <thead>
      <tr>
        <th>Nombre</th>
        <th class="text-center">Afecta Bolsa Horas</th>
        <th class="text-center">Acumula Festivos Trabajados</th>
        <th class="text-center">Acumula Libranza por Festivo</th>
        <th class="text-end">Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% @tipos_contrato.each do |tipo_contrato| %>
        <tr>
          <td><strong><%= tipo_contrato.nombre %></strong></td>
          <td class="text-center"><%= tipo_contrato.afecta_bolsa_horas ? '✅' : '❌' %></td>
          <td class="text-center"><%= tipo_contrato.acumula_festivo_trabajado_en_bolsa ? '✅' : '❌' %></td>
          <td class="text-center"><%= tipo_contrato.acumula_festivo_en_libranza ? '✅' : '❌' %></td>
          <td class="text-end">
            <%= link_to 'Editar', edit_admin_tipo_contrato_path(tipo_contrato), class: 'btn btn-secondary btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="mt-4">
  <%= link_to '← Volver al Panel', admin_root_path, class: 'btn btn-secondary' %>
</div>