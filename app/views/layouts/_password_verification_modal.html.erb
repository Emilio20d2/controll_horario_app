<!-- Modal de Verificación de Contraseña -->
<div class="modal fade" id="passwordVerificationModal" tabindex="-1" aria-labelledby="passwordVerificationModalLabel" aria-hidden="true" data-controller="password-verification">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="passwordVerificationModalLabel">Confirmar Acción</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>Para continuar, por favor, introduce tu contraseña de administrador.</p>

        <!-- Formulario de verificación que se conecta con el controlador de Stimulus -->
        <form data-action="submit->password-verification#verify">
          <%= token_tag %>
          <input type="hidden" data-password-verification-target="deleteUrl">

          <div class="mb-3">
            <label for="admin-password" class="form-label">Contraseña</label>
            <input type="password" class="form-control" id="admin-password" data-password-verification-target="passwordField" required>
          </div>

          <div data-password-verification-target="errorContainer" class="text-danger mb-3"></div>

          <button type="submit" class="btn btn-primary w-100" data-password-verification-target="submitButton">Verificar y Continuar</button>
        </form>
      </div>
    </div>
  </div>
</div>