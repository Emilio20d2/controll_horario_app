<%#
  Formulario de inicio de sesión.
  Se muestra dentro del layout de la aplicación, pero como el usuario no está
  logueado, la barra de navegación no aparecerá (la añadiremos en el siguiente paso).
%>
<div class="container mt-5">
  <div class="content-box" style="max-width: 500px; margin: auto;">
    <h1 class="text-center mb-4">Iniciar Sesión</h1>

    <%= form_with(scope: :session, url: login_path, local: true) do |f| %>
      <div class="mb-3">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, class: "form-control", required: true, autofocus: true %>
      </div>

      <div class="mb-3">
        <%= f.label :password, "Contraseña", class: "form-label" %>
        <%= f.password_field :password, class: "form-control", required: true %>
      </div>

      <div class="d-grid gap-2">
        <%= f.submit "Entrar", class: "btn btn-primary btn-lg" %>
      </div>
    <% end %>
  </div>
</div>